@model IEnumerable<HuynhThiThuyTrang_2080600142.Models.Course>
@{
    ViewBag.Title = "Home Page";
}





<div class="row">
    <ul class="course">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.DateTime.ToString("dd")
                    </div>
                    <div class="details">
                        <span class="lecturer">
                            @course.Lecturer.Id
                        </span>
                        <span class="category">
                            @course.Category.Name
                        </span>
                    </div>

                </div>

            </li>
        }
    </ul>
</div>